{% from "components/list/_macro.njk" import onsList %}

{% set pageConfig = {
    "title": "ONS Prototypes",
    "footer": {
        "oglLink": true
    }
} %}
{% block main %}
    {% set groups = helpers.navigationHelper({
        "pages": prototypeListing,
        "ignorePaths": ["/"]
    }) %}
    {% for group in groups %}
        <section>
            <h1 class="u-fs-m">{{ group.title }}</h1>
            {{
                onsList({
                    "classes": "ons-list--bare",
                    "itemsList": group.items
                })
            }}
        </section>
    {% endfor %}
{% endblock %}
