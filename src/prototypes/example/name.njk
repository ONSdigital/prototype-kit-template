---
group: Examples
title: Example prototype
layout: example/views/_main
---
{% from "components/input/_macro.njk" import onsInput %}
{% from "components/button/_macro.njk" import onsButton %}

{% set formActionURL = pageInfo.rootPath + "/age.html" %}

{% block bodyStart %}
    <form class="form-class" method="GET" autocomplete="off" novalidate action="{{ formActionURL }}">
{% endblock %}

{% block main %}
    <h1>What is your name?</h1>
    {{
        onsInput({
            "id": "first-name",
            "name": "first-name",
            "label": {
                "text": "First name"
            }
        })
    }}
    {{
        onsInput({
            "id": "last-name",
            "name": "last-name",
            "label": {
                "text": "Surname"
            }
        })
    }}
    {{
        onsButton({
            "text": "Save and continue",
            "classes": "ons-u-mt-l"
        })
    }}
{% endblock %}

{% block bodyEnd %}
    </form>
    <script src="/prototypes/example/index.js"></script>
{% endblock %}
