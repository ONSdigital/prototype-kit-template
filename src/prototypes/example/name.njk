{% from "components/input/_macro.njk" import onsInput %}
{% from "components/button/_macro.njk" import onsButton %}

{% set form =  {
    "method": "GET",
    "attributes": {
        "action":  pageInfo.rootPath + "/age.html"
    }
} %}

{% block main %}
    <h1>What is your name?</h1>
    {{
        onsInput({
            "id": "first-name",
            "name": "first-name",
            "label": {
                "text": "First name"
            }
        })
    }}
    {{
        onsInput({
            "id": "last-name",
            "name": "last-name",
            "label": {
                "text": "Surname"
            }
        })
    }}
    {{
        onsButton({
            "text": "Save and continue",
            "classes": "ons-u-mt-l"
        })
    }}
{% endblock %}
